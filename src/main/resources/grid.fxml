<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/9"
            fx:controller="gol.controller.grid.GridController">
    <content>
        <VBox alignment="CENTER" spacing="10.0">
            <GridPane fx:id="gridPane" alignment="CENTER" BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label text="Simulation not running..." textAlignment="CENTER" GridPane.halignment="CENTER"
                           GridPane.valignment="CENTER"/>
                </children>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </BorderPane.margin>
            </GridPane>
        </VBox>
    </content>
</ScrollPane>
